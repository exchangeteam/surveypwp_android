<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_answerQuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginS"
        android:layout_marginEnd="@dimen/marginS"
        android:layout_marginBottom="@dimen/marginS"
        android:textStyle="bold"
        android:textSize="@dimen/allQuestionnaireTitleTextSize"/>

    <TextView
        android:id="@+id/tv_answerQuestionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginS"
        android:layout_marginEnd="@dimen/marginS"
        android:layout_marginBottom="@dimen/marginS"
        android:textStyle="italic"
        android:textSize="@dimen/allQuestionnaireDescriptionTextSize"/>

    <EditText
        android:id="@+id/et_answerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginS"
        android:layout_marginStart="@dimen/marginS"
        android:layout_marginEnd="@dimen/marginS"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="3"
        android:textStyle="italic"
        android:hint="@string/hint_answer_content"/>

</LinearLayout>