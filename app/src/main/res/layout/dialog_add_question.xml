<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_newQuestionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginS"
        android:layout_marginStart="@dimen/marginM"
        android:layout_marginEnd="@dimen/marginM"
        android:inputType="text"
        android:hint="@string/hint_question_title"/>

    <EditText
        android:id="@+id/et_newQuestionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginS"
        android:layout_marginStart="@dimen/marginM"
        android:layout_marginEnd="@dimen/marginM"
        android:inputType="text"
        android:hint="@string/hint_question_description"/>

</LinearLayout>